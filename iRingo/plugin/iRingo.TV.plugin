#!version = 3.4.3

[Argument]
ThirdParty = switch,false,tag=启用第三方 App 与 TV app 关联功能,desc=是否将桌面版/macOS版/app版等平台的 TV app 转换至 iPad 版，以启用第三方 App 与 TV app 关联功能(如: Disney+, Prime Video 等)。
HLSUrl = select,"play-edge.itunes.apple.com","","play.itunes.apple.com",tag=[主机名] HTTP实时流(HLS)地址,desc=因为FPS服务域名禁止MitM，修改此地址可以分离HLS与FPS的域名，从而恢复对DualSubs的双语字幕支持。
FPSUrl = select,"play.itunes.apple.com","","play-edge.itunes.apple.com",tag=[主机名] FairPlay流(FPS)地址,desc=因为FPS服务域名禁止MitM，修改此地址可以分离HLS与FPS的域名，从而恢复对DualSubs的双语字幕支持。
LogLevel = select,"WARN","OFF","ERROR","INFO","DEBUG","ALL",tag=[调试] 日志等级,desc=选择脚本日志的输出等级，低于所选等级的日志将全部输出。

[Script]
http-request ^https?:\/\/uts-api\.itunes\.apple\.com\/uts\/(v1|v2|v3)\/ script-path=https://github.com/NSRingo/TV/releases/download/v3.4.3/request.bundle.js, requires-body=1, tag=📺 TV.uts.request, argument=[{ThirdParty},{HLSUrl},{FPSUrl},{LogLevel}]
http-response ^https?:\/\/uts-api\.itunes\.apple\.com\/uts\/(v1|v2|v3)\/ script-path=https://github.com/NSRingo/TV/releases/download/v3.4.3/response.bundle.js, requires-body=1, tag=📺 TV.uts.response, argument=[{ThirdParty},{HLSUrl},{FPSUrl},{LogLevel}]
http-request ^https?:\/\/umc-tempo-api\.apple\.com\/(v1|v2|v3)\/ script-path=https://github.com/NSRingo/TV/releases/download/v3.4.3/request.bundle.js, requires-body=1, tag=📺 TV.umc.request

http-request ^https?:\/\/play(-edge)?\.itunes\.apple\.com\/WebObjects\/MZPlay(Local)?\.woa\/hls(\/(subscription|workout))?\/playlist\.m3u8 script-path=https://github.com/NSRingo/TV/releases/download/v3.4.3/request.bundle.js, tag=📺 TV.hls.request
http-request ^https?:\/\/play(-edge)?\.itunes\.apple\.com\/WebObjects\/MZPlay(Local)?\.woa\/wa\/(fpsRequest|checkInNonceRequest) script-path=https://github.com/NSRingo/TV/releases/download/v3.4.3/request.bundle.js, tag=📺 TV.wa.request

[MITM]
hostname = uts-api.itunes.apple.com, umc-tempo-api.apple.com
