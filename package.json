{
	"name": "sync-rules",
	"version": "1.0.0",
	"description": "sync-rules",
	"type": "module",
	"scripts": {
		"node": "NODE_OPTIONS=\"--experimental-specifier-resolution=node\" node -r tsx/esm",
		"sync:rules": "pnpm run node Chores/engineering/sync/main.ts",
		"sync:mirror": "pnpm run node Chores/engineering/sync/mirror.ts",
		"sync": "pnpm run sync:rules && pnpm run sync:mirror",
		"build": "pnpm run node Chores/engineering/build/build.ts",
		"build:temp": "OUTPUT_DIR=$(mktemp -d) pnpm run node Chores/engineering/build/build.ts && echo \"构建完成，输出到临时目录: $OUTPUT_DIR\"",
		"build:clean": "pnpm run build && rm -rf public",
		"dev": "pnpm run sync && pnpm run build",
		"merge": "pnpm run node Chores/engineering/merge.ts",
		"validate-rules": "pnpm run node Chores/engineering/build/scripts/validate-rules.ts"
	},
	"dependencies": {
		"@types/js-yaml": "^4.0.9",
		"axios": "^1.8.4",
		"esbuild-wasm": "^0.19.11",
		"js-yaml": "^4.1.0",
		"node-fetch": "^3.3.2",
		"tsx": "^4.7.1"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"main": "index.js",
	"devDependencies": {
		"@types/node": "^22.14.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@10.11.0"
}
